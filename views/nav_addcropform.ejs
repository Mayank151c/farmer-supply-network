<div class="tab" id="cropform">

    <form id="form-crop">
        <label for="cropname">Crop Name:</label>
        <input type="text" id="crop" name="cropname" placeholder="Name of Crop" required>
      
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" placeholder="In Quintal" required>
      
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="In Rs." required>
      
        <button type="submit">Submit</button>
    </form>

</div>